<h1>Listing ratings</h1>

<table>
  <thead>
    <tr>
      <th>Stars</th>
      <th>Comment</th>
      <th>Campsite</th>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.stars %></td>
        <td><%= rating.comment %></td>
        <td><%= rating.campsite_id %></td>
        <td><%= rating.name %></td>
        <td><%= rating.description %></td>
        <td><%= rating.location %></td>
        <td><%= rating.latitude %></td>
        <td><%= rating.longitude %></td>
        <td><%= link_to 'Show', rating %></td>
        <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
        <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

