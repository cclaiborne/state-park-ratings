<%= form_for(@rating) do |f| %>
  <% if @rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

      <ul>
      <% @rating.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :stars %><br>
    <%= f.select :stars, options_for_select([1,2,3,4,5]) %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="field">
    <%= f.label :choose_a_camground %>
    <%= f.select :campsite_id, Campsite.all.collect { |p| [ p.name, p.id ] } %>
  </div>
 <div class="field">
    <%= f.label :choose_a_user%>
    <%= f.select :user_id, User.all.collect { |p| [ p.name, p.id ] } %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
